#!/bin/sh -e
  
# This script builds and packages the Android version.

mkdir -p packages

cd android/app/src/main/cpp
sh ./link-files.sh
sh ./build-intel-lib.sh
cd ../../../..
./gradlew --warning-mode all assembleDecimalRelease
mv app/build/outputs/apk/decimal/release/app-decimal-release.apk ../packages/Plus42Android.apk
#./gradlew --warning-mode all assembleBinaryRelease
#mv app/build/outputs/apk/binary/release/app-binary-release.apk ../packages/Plus42BinaryAndroid.apk
